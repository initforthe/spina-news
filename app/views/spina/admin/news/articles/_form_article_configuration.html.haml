#article_configuration.tab-content.well
  .horizontal-form

    .horizontal-form-group
      .horizontal-form-label
        = Spina::News::Article.human_attribute_name :draft
        %small= Spina::News::Article.human_attribute_name :draft_description
      .horizontal-form-content
        = f.check_box :draft, data: {switch: true}

    .horizontal-form-group
      .horizontal-form-label
        = Spina::News::Article.human_attribute_name :slug
        %small= Spina::News::Article.human_attribute_name :slug_description
      .horizontal-form-content
        = f.text_field :slug, placeholder: Spina::News::Article.human_attribute_name(:slug_placeholder)
        - if @article.slug
          %small
            Current permalink:
            \ /news/articles/#{@article.slug}

    .horizontal-form-group
      .horizontal-form-label
        = Spina::News::Article.human_attribute_name :published_at
      .horizontal-form-content
        = f.datetime_field :published_at

    .horizontal-form-group
      .horizontal-form-label
        = Spina::News::Article.human_attribute_name :user
      .horizontal-form-content
        .select-dropdown
          = f.select :user_id, Spina::User.all.collect{|u| [u.name, u.id]},
            include_blank: true, prompt: true
